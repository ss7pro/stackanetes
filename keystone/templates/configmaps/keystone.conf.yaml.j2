apiVersion: v1
kind: ConfigMap
data:
  keystone.conf: |+
    [DEFAULT]
    debug = {{ misc.debug }}
    use_syslog = False
    use_stderr = True
    workers = {{ misc.workers }}

    [database]
    connection = mysql+pymysql://{{ database.keystone_user }}:{{ database.keystone_password }}@{{ database.address }}/{{ database.keystone_database_name }}
    max_retries = -1

    [memcache]
    servers = {{ memcached.address }}

    [cache]
    backend = dogpile.cache.memcached
    memcache_servers = url:{{memcached.address}}
    config_prefix = cache.keystone
    distributed_lock = True
    enabled = True

