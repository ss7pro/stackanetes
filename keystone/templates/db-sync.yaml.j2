apiVersion: batch/v1
kind: Job
spec:
  template:
    spec:
      restartPolicy: OnFailure
      containers:
        - name: keystone-init
          image: {{ deployment.image.db_sync }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/db-sync.sh"
            - name: DEPENDENCY_JOBS
              value: "keystone-init,mariadb-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb"
            - name: DEPENDENCY_CONFIG
              value: "/etc/keystone/keystone.conf,/tmp/db-sync.sh"
          volumeMounts:
            - name: keystoneconf
              mountPath: /configmaps/keystone.conf
            - name: dbsyncsh
              mountPath: /configmaps/db-sync.sh
      volumes:
        - name: keystoneconf
          configMap:
            name: keystone-keystoneconf
        - name: dbsyncsh
          configMap:
            name: keystone-dbsyncsh
