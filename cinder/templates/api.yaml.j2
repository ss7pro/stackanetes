apiVersion: extensions/v1beta1
kind: Deployment
spec:
  replicas: {{ deployment.replicas }}
  template:
    metadata:
      labels:
        app: cinder-api
    spec:
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      containers:
        - name: cinder-api
          image: {{ deployment.image.api }}
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "cinder-api"
            - name: DEPENDENCY_JOBS
              value: "cinder-init,cinder-db-sync,mariadb-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb,rabbitmq,keystone-api"
            - name: DEPENDENCY_CONFIG
              value: "/etc/cinder/cinder.conf"
          ports:
            - containerPort: {{ network.port }}
          readinessProbe:
            tcpSocket:
              port: {{ network.port }}
          volumeMounts:
            - name: cinderconf
              mountPath: /configmaps/cinder.conf
      volumes:
        - name: cinderconf
          configMap:
            name: cinder-cinderconf
